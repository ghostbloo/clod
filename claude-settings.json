{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "sonnet",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/bash_command_validator.py"
          }
        ]
      },
      {
        "matcher": "exit_plan_mode",
        "hooks": [
          {
            "type": "command",
            "command": "clod sfx play ~/.claude/sounds/whistle2.WAV &"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "clod sfx play ~/.claude/sounds/pencil_eraser_select.wav &"
          }
        ]
      },
      {
        "matcher": "Grep|Glob|LS",
        "hooks": [
          {
            "type": "command",
            "command": "clod sfx play ~/.claude/sounds/chao5.WAV &"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "clod sfx play ~/.claude/sounds/notification.wav &"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "clod sfx play ~/.claude/sounds/splat.mp3 &"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "clod sfx play ~/.claude/sounds/ya.wav &"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "clod sfx play ~/.claude/sounds/STRM_GB02_FURURU_E.wav &"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "clod sfx play ~/.claude/sounds/mew.wav &"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); current_dir=$(echo \"$input\" | jq -r '.workspace.current_dir'); model_name=$(echo \"$input\" | jq -r '.model.display_name'); git_branch=$(cd \"$current_dir\" 2>/dev/null && git branch --show-current 2>/dev/null); if [ -n \"$git_branch\" ]; then git_info=\" $git_branch\"; else git_info=\"\"; fi; user_symbol=\"‚ùØ\"; if [ \"$(id -u)\" -eq 0 ]; then user_symbol=\"#\"; fi; printf \"\\033[34m%s\\033[0m%s \\033[38;5;83m%s\\033[0m\" \"$(basename \"$current_dir\")\" \"$git_info\" \"$user_symbol\""
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754089273019
  }
}